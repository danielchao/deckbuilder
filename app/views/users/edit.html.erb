<div class="large-4 columsn">
    <h2>Edit Profile</h2>
    <%= form_for(@user) do |f|%>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.submit "Edit", class: "button" %>
    <% end %>
</div>
