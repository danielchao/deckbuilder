<%= form_for(@deck, url: path) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :content %>
    <%= f.text_field :content, id: "deck-input"%>
    <div id='deck-div' contenteditable> </div>
    <%= f.submit "Save", class: "button" %>
    <p>Found <span id="count">0</span> cards</p>
<% end %>
