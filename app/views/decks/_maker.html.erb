<div class="large-5 columns">
    <%= form_for(@deck, url: deck_path) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :description %>
        <%= f.text_field :description %>
        <%= f.label :content %>
        <%= f.text_area :content, class: "deck-input"%>
        <%= f.submit "Save", class: "button" %>
    <% end %>
</div>
