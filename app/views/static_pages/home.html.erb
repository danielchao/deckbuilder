<div class="row">
    <div class="large-12 columns">
        <ul data-orbit>
            <li>
            <%= image_tag "build.jpg" %>
            <div class="orbit-caption">
                <h2 class="caption">Build</h2>
                <p>Incredibly badass and seamless interface for deck building</p>
                <a href='#' data-reveal-id="signup" class="button large radius">Get Started</a>
            </div>
            </li>
            <li>
            <%= image_tag "storage.jpg" %>
            <div class="orbit-caption">
                <h2 class="caption">Store</h2>
                <p>A home for all your decks</p>
                <a href='#' data-reveal-id="signup" class="button large radius">Get Started</a>
            </div>
            </li>
            <li>
            <%= image_tag "share.jpg" %>
            <div class="orbit-caption">
                <h2 class="caption">Share</h2>
                <p>Share with your friends, if you have any! </p>
                <a href='#' data-reveal-id="signup" class="button large radius">Get Started</a>
            </div>
            </li>
        </ul>
    </div>
</div>
<div id='signup' class="reveal-modal small">
    <h1>Sign up</h1>
    <a class="close-reveal-modal">&#215;</a>
    <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <%= f.label :name %>
        <%= f.text_field :name %>
        <%= f.label :email %>
        <%= f.text_field :email %>
        <%= f.label :password %>
        <%= f.password_field :password %>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
        <%= f.submit "Create my account", class: "button large" %>
    <% end %>
</div>
